<!--Dialogue Window must be not resizable and located at center of the screen-->
<!--Background's attribute represent the os theme (e.g. Dark or Light)-->
<!--It's a Dynamic Resource because can change at runtime and Static because SystemColors.WindowBrushKey is a static field-->
<Window x:Class="Editor.GameProject.ProjectBrowserDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.GameProject"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Title="ProjectBrowserDialogue" 
        Height="450" 
        Width="800"
        Background="#38184C"
        FontFamily="Segoe UI">
    <!--Define reusable styles for consistency-->
    <Window.Resources>
        <!--Navigation Button Style-->
        <Style x:Key="NavigationToggleStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#A0CD60" />
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Foreground" Value="#A0CD60" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="24, 12" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" >
                            <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--Hover state for better interactivity feedback-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border"
                                        Value="#19FFFFFF" />
                            </Trigger>
                            <!--Checked state with accent color-->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="BorderBrush" TargetName="border"
                                        Value="#CEF09D" />
                                <Setter Property="Foreground"
                                        Value="#CEF09D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!--Content Panel Style for consistent appearence-->
        <Style x:Key="ContentPanelStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Margin" Value="16" />
            <Setter Property="Padding" Value="24" />
        </Style>

        <!--Action Button Style-->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#33FFFFFF" />
            <Setter Property="BorderBrush" Value="#A0CD60" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Foreground" Value="#CEF09D" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="16, 8" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"
                          CornerRadius="2">
                            <ContentPresenter x:Name="contentPresenter"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Content="{TemplateBinding Content}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--Hover state for better interactivity feedback-->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#1C646D" />
                            </Trigger>
                            <!-- Default State-->
                            <Trigger Property="IsDefault" Value="True">
                                <Setter Property="Background" Value="#A0CD60" />
                                <Setter Property="Foreground" Value="#604670" />
                                <Setter Property="BorderBrush" Value="#33FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!--Navigation Tabs-->
            <RowDefinition Height="*" />
            <!--Main Content Area-->
            <RowDefinition Height="Auto" />
            <!--Action button area-->
        </Grid.RowDefinitions>
        
        <!--Navigation Tab Panel with improved layout-->
        <Border Grid.Row="0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">

                <!--Open Project Tab with proper naming and accessibility-->
                <ToggleButton x:Name="OpenProjectTab"
                              Content="Open"
                              Style="{StaticResource NavigationToggleStyle}"
                              IsChecked="True"
                              AutomationProperties.Name="Open existing project tab"
                              Click="OnNavigationTabClick" />

                <!--Create Project Tab with consistent styling-->
                <ToggleButton x:Name="CreateProjectTab"
                              Content="Create"
                              Style="{StaticResource NavigationToggleStyle}"
                              Margin="8,0,0,0"
                              AutomationProperties.Name="Create new project tab"
                              Click="OnNavigationTabClick" />
            </StackPanel>
        </Border>
        
        <!--Content Area with proper content switching-->
        <ContentPresenter x:Name="MainContentPresenter"
                          Grid.Row="1"
                          Content="{Binding CurrentView, RelativeSource={RelativeSource AncestorType=Window}}" />
        
        <!--Action Buttons Area for Ok/Cancel operations-->
        <Border Grid.Row="2"              
                Padding="16">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{StaticResource ActionButtonStyle}"
                        IsCancel="True" />

                <Button x:Name="OkButton"
                        Content="OK"
                        Style="{StaticResource ActionButtonStyle}"
                        IsDefault="True" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
