<!--Dialogue Window must be not resizable and located at center of the screen-->
<Window x:Class="Editor.GameProject.ProjectBrowserDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.GameProject"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="ProjectBrowserDialogue" Height="450" Width="800">
    <Grid>
        <!--Create: 1. Row for Open Project and Create Project Buttons
            2. Row for content dependent from button pressed-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--Panel for Open Project and Create Project Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
        <!--Create Open Project and Create Project Buttons-->
            <ToggleButton Content="Open" x:Name="openProjectButton" FontSize="32"/>
            <ToggleButton Content="Create" x:Name="createProjectButton" FontSize="32" Margin="30,0,0,0"/>
        </StackPanel>
        <!--Panel for content dependent from button pressed-->
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Border Width="800" Background="LightBlue">
                <TextBlock Text="Open Project Content" FontSize="72"/>
            </Border>
            <Border Width="800" Background="LightGreen">
                <TextBlock Text="Create Project Content" FontSize="72"/>
            </Border>
        </StackPanel>


    </Grid>
</Window>
